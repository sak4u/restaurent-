generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id @default(autoincrement())
  nom      String
  email    String @unique
  password String
}

model Serveur {
  id        Int        @id @default(autoincrement())
  nom       String
  email     String     @unique
  photoUrl  String?
  carres    Carre[]
  commandes Commande[]
  codeUnique String?  @unique @db.VarChar(8)
}

model Cuisinier {
  id       Int    @id @default(autoincrement())
  nom      String
  email    String @unique
  photoUrl String?
  codeUnique String?  @unique @db.VarChar(8)
}

model Carre {
  id        Int     @id @default(autoincrement())
  nom       String
  serveurId Int?
  serveur   Serveur? @relation(fields: [serveurId], references: [id])
  tables    Table[]
}

model Table {
  id        Int        @id @default(autoincrement())
  numero    Int
  carreId   Int
  carre     Carre      @relation(fields: [carreId], references: [id])
  commandes Commande[]
}

model Commande {
  id        Int            @id @default(autoincrement())
  tableId   Int
  serveurId Int
  table     Table          @relation(fields: [tableId], references: [id])
  serveur   Serveur        @relation(fields: [serveurId], references: [id])
  plats     PlatCommande[]
  facture   Facture?
  createdAt DateTime       @default(now())
}

model PlatCommande {
  id              Int             @id @default(autoincrement())
  commandeId      Int
  produitId       Int
  quantite        Int
  etatPreparation EtatPreparation @default(COMMANDE)
  commande        Commande        @relation(fields: [commandeId], references: [id])
  produit         Produit         @relation(fields: [produitId], references: [id])
}

model Facture {
  id         Int      @id @default(autoincrement())
  commandeId Int      @unique
  commande   Commande @relation(fields: [commandeId], references: [id])
  montant    Float
  date       DateTime @default(now())
}

model Menu {
  id       Int           @id @default(autoincrement())
  nom      String
  produits ProduitMenu[]
}

model ProduitMenu {
  id        Int     @id @default(autoincrement())
  menuId    Int
  produitId Int
  menu      Menu    @relation(fields: [menuId], references: [id])
  produit   Produit @relation(fields: [produitId], references: [id])
}

model Produit {
  id        Int              @id @default(autoincrement())
  nom       String
  prix      Float
  type      ProduitType
  photoUrl  String?
  plats     PlatCommande[]
  menus     ProduitMenu[]
  contenus  ContenuFormule[] @relation("FormuleContenu") // FORMULE → contenus
  formules  ContenuFormule[] @relation("ProduitDansFormule") // PRODUIT → appartient à Formule
}

model ContenuFormule {
  id        Int     @id @default(autoincrement())
  formuleId Int
  produitId Int
  quantite  Int
  formule   Produit @relation("FormuleContenu", fields: [formuleId], references: [id])
  produit   Produit @relation("ProduitDansFormule", fields: [produitId], references: [id])
}

enum ProduitType {
  FORMULE
  PLAT
  EXTRA
}

enum EtatPreparation {
  COMMANDE
  PREPARE
}
